<h1>New Driver</h1>
<%= form_with scope: :driver, url: drivers_path, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :number %><br>
    <%= form.text_area :number %>
  </div>
  <div>
    <%= form.label :team %><br>
    <%= form.text_area :team %>
  </div>
  <div>
    <%= form.label :make_model %><br>
    <%= form.text_area :make_model %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', drivers_path %>