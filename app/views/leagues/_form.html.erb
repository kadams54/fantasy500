<%= form_with(model: @league, local: true) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {model: @league} %>
 
  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>

  <% if @league.teams %>
    <div class="current-teams">
      <h5>Current Teams</h5>
      <% @league.teams.each do |team| %>
      <div class="team tile">
        <div class="tile-icon">
          <%= gravatar_for team.user %>
        </div>
        <div class="tile-content">
          <div class="tile-title team-name"><%= link_to team.name, team %></div>
          <div class="tile-subtitle team-owner"><%= team.user.name %></div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :invites, class: "form-label" %>
    <%= f.text_area :invites, class: "form-input" %>
    <small>Email addresses should be comma-separated.</small>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>