<%= form_with(model: @league, local: true) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {model: @league} %>
 
  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>