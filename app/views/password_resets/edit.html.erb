<% provide(:title, "Reset Password") %>

<div class="column col-6 col-md-10 col-sm-12 col-mx-auto">
  <h1>Reset Password</h1>

  <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
    <%= render partial: 'shared/error_messages', locals: {model: @user} %>

    <%= hidden_field_tag :email, @user.email %>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Update Password", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
