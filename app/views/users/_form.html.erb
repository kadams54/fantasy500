<%= form_with(model: @user, local: true, url: yield(:url)) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", data: {testid: "name"} %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-input", data: {testid: "email"} %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-input", data: {testid: "password"} %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-input", data: {testid: "password-confirmation"} %>
  </div>
  
  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block", data: {testid: "submit"} %>
  </div>
<% end %>
