<table class="table scoreboard">
  <caption><%= Grid.maximum('lap') %> of 200 laps in the books.</caption>
  <thead>
    <tr>
      <th class="medal" scope="col"></th>
      <th class="rank" scope="col"></th>
      <th class="team" scope="col">Team</th>
      <th class="score" scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.sort_by {|t| t.score}.each_with_index do |team, index| %>
      <tr>
        <td class="medal">
          <%= case index when 0 then "ðŸ¥‡" when 1 then "ðŸ¥ˆ" when 2 then "ðŸ¥‰" else "" end %>
        </td>
        <td class="rank">
          <%= index + 1 %>.
        </td>
        <td class="team">
          <%= link_to team.name, team_path(team) %>
        </td>
        <td class="score">
          <%= link_to team.score, team_path(team) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>