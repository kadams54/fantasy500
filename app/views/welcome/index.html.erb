<h1>Scoreboard</h1>

<table class="scoreboard">
  <thead>
    <tr>
      <th>Team</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.sort_by {|t| t.score}.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Manage Drivers', controller: 'drivers' %>
<%= link_to 'Manage Grids', controller: 'grids' %>
<%= link_to 'Manage Teams', controller: 'teams' %>
